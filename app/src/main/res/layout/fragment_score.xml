<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScoreFragment">


    <TextView
        android:id="@+id/txtScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btn_add1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="222dp"
        android:text="Plus 1"
        app:layout_constraintEnd_toEndOf="@+id/txtScore"
        app:layout_constraintStart_toStartOf="@+id/txtScore"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_minus2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="63dp"
        android:text="minus 2"
        app:layout_constraintEnd_toEndOf="@+id/btn_add1"
        app:layout_constraintStart_toStartOf="@+id/btn_add1"
        app:layout_constraintTop_toBottomOf="@+id/btn_add1" />

    <Button
        android:id="@+id/btn_add4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:text="Plus 4"
        app:layout_constraintEnd_toEndOf="@+id/btn_minus2"
        app:layout_constraintStart_toStartOf="@+id/btn_minus2"
        app:layout_constraintTop_toBottomOf="@+id/btn_minus2" />


</androidx.constraintlayout.widget.ConstraintLayout>


